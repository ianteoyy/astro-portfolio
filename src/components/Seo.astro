---
import siteData from "../data/siteData.json";
import jsonLDGenerator from "../js/jsonLD.js";

const { title, description, url = Astro.url } = Astro.props;

const jsonLD = jsonLDGenerator();
---

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content="Wafflemooncake" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={siteData.image.src} />
<meta property="og:image:url" content={siteData.image.src} />
<meta property="og:image:secure_url" content={siteData.image.src} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="667" />
<meta property="og:image:height" content="261" />
<meta property="og:image:alt" content={siteData.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={siteData.image.src} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:domain" content={siteData.url} />

<!-- JSON LD -->
<Fragment set:html={jsonLD} />
