---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<!-- <html lang="en" class="h-full" data-theme="light"> -->
<html lang="en" class="min-h-full py-8">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="I'm Ian, and this is my portfolio page!"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="favicon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Lexend:wght@200;400;500;700&display=swap"
    />
  </head>
  <body class="grid place-items-center h-full">
    <slot />
    <style is:global>
      html {
        @apply bg-background text-text;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
