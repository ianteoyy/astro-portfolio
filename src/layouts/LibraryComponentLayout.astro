---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"library">["data"];

const { title, language, publishDate } = Astro.props;
---

<Layout title={`Ian's Library - ${title}`}>
  <main class="space-y-12 p-4 lg:w-max mx-auto">
    <div>
      <h1 class="text-title">{title}</h1>
      <p class="text-sm">Written in {language}</p>
      <p class="mb-4 text-sm">
        Published {publishDate.toISOString().slice(0, 10)}
      </p>
    </div>

    <section>
      <slot />
    </section>
  </main>
</Layout>
